{
  "name": "@passman/api",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Password Manager backend",
  "author": "Nizam Chaudhary",
  "license": "ISC",
  "keywords": [],
  "exports": {
    ".": {
      "import": "./src/app.ts"
    }
  },
  "module": "src/server.ts",
  "files": [
    "drizzle.config.ts",
    "src"
  ],
  "scripts": {
    "start": "bun src/server.ts",
    "dev": "bun --watch src/server.ts",
    "debug": "bun --watch --inspect src/server.ts",
    "lint:type": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up",
    "db:studio": "drizzle-kit studio",
    "db:update": "pnpm db:generate && pnpm db:migrate",
    "db:seed": "tsx src/db/seed.ts"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.840.0",
    "@hono/zod-validator": "^0.7.0",
    "@passman/schema": "workspace:*",
    "@scalar/hono-api-reference": "^0.9.7",
    "drizzle-orm": "^0.39.3",
    "hono": "^4.8.4",
    "moment": "^2.30.1",
    "mysql2": "^3.14.1",
    "nodemailer": "^6.10.1",
    "pino": "^9.7.0",
    "zod": "^3.25.74",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@eslint/js": "^9.30.1",
    "@types/bun": "latest",
    "@types/nodemailer": "^6.4.17",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.30.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2"
  }
}
