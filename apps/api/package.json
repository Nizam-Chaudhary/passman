{
    "name": "@passman/api",
    "version": "1.0.0",
    "description": "Password Manager backend",
    "author": "Nizam Chaudhary",
    "license": "ISC",
    "keywords": [],
    "module": "src/server.ts",
    "type": "module",
    "private": true,
    "exports": {
        ".": {
            "import": "./src/app.ts"
        }
    },
    "scripts": {
        "start": "bun src/server.ts",
        "dev": "bun --watch src/server.ts",
        "debug": "bun --watch --inspect src/server.ts",
        "lint:type": "tsc --noEmit",
        "lint": "nx eslint:lint",
        "lint:fix": "nx eslint:lint --fix",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write .",
        "db:generate": "nx exec -- drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:pull": "drizzle-kit pull",
        "db:check": "drizzle-kit check",
        "db:up": "drizzle-kit up",
        "db:studio": "drizzle-kit studio",
        "db:update": "pnpm db:generate && pnpm db:migrate",
        "db:seed": "tsx src/db/seed.ts"
    },
    "dependencies": {
        "@aws-sdk/client-ses": "^3.826.0",
        "@grpc/grpc-js": "^1.13.4",
        "@hono/zod-validator": "^0.7.0",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.56.1",
        "@opentelemetry/exporter-logs-otlp-grpc": "^0.57.2",
        "@opentelemetry/exporter-metrics-otlp-grpc": "^0.57.2",
        "@opentelemetry/exporter-trace-otlp-grpc": "^0.57.2",
        "@opentelemetry/resources": "^1.30.1",
        "@opentelemetry/sdk-logs": "^0.57.2",
        "@opentelemetry/sdk-metrics": "^1.30.1",
        "@opentelemetry/sdk-node": "^0.57.2",
        "@opentelemetry/sdk-trace-node": "^1.30.1",
        "@opentelemetry/semantic-conventions": "^1.34.0",
        "@passman/schema": "workspace:*",
        "@scalar/hono-api-reference": "^0.9.3",
        "drizzle-orm": "^0.39.3",
        "hono": "^4.7.11",
        "moment": "^2.30.1",
        "mysql2": "^3.14.1",
        "nodemailer": "^6.10.1",
        "otel": "^2.0.37",
        "pino": "^9.7.0",
        "zod": "^3.25.56",
        "zod-openapi": "^4.2.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.28.0",
        "@types/bun": "latest",
        "@types/nodemailer": "^6.4.17",
        "dotenv": "^16.5.0",
        "drizzle-kit": "^0.30.6",
        "eslint": "^9.28.0",
        "eslint-plugin-drizzle": "^0.2.3",
        "globals": "^15.15.0",
        "pino-pretty": "^13.0.0",
        "prettier": "^3.5.3",
        "typescript-eslint": "^8.33.1"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
